@model IEnumerable<Scanton.Models.FooterDescription>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Manage Footer";
}

<style>
    btn-lg {
        font-size: 1.5rem; /* Increase font size */
        padding: 0.75rem 1.5rem; /* Adjust padding for better button size */
    }

    .fa-toggle-on, .fa-toggle-off {
        font-size: 2rem; /* Increase icon size */
    }
</style>


<h2 class="text-center my-4">Manage Footer</h2>

<div class="text-end mb-4">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Description
    </a>
</div>

<table class="table table-bordered table-hover text-center">
    <thead class="table-dark">
        <tr>
            <th>Tittle</th>
            <th>Desciption</th>
            <th>Activated</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var footer in Model)
            {
                <tr>
                    <td>@footer.Title</td>
                    <td>@footer.Description</td>
                    <td>
                        <a asp-action="Activate"
                           asp-route-id="@footer.Id"
                           asp-route-isActive="@((footer.Is_Active) ? "false" : "true")"
                           class="me-2 btn-lg">
                            @if (footer.Is_Active)
                            {
                                <i class="fa-solid fa-toggle-on" style="color:green"></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-toggle-off" style="color:red"></i>
                            }
                        </a>

                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@footer.Id" class="btn btn-warning btn-sm me-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@footer.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this banner?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Footer Description available.</td>
            </tr>
        }
    </tbody>
</table>
