                $(document).ready(function() {
            let currentIndex = 0;
            const slides = $(".slide");
            const totalSlides = slides.length;
            const counter = $(".counter");
            let autoSlideInterval;

            function updateSlides() {
                // Remove active class from all slides and hide them
                slides.removeClass("is-active");

                // Add active class to the current slide and show it
                slides.eq(currentIndex).addClass("is-active");

                // Update the counter text
                counter.text((currentIndex + 1) + " / " + totalSlides);
            }

            function startAutoSlide() {
                autoSlideInterval = setInterval(function() {
                    currentIndex = (currentIndex + 1) % totalSlides;
                    updateSlides();
                }, 5000); // Adjust the interval as needed
            }

            function stopAutoSlide() {
                clearInterval(autoSlideInterval);
            }

            $(".next").click(function() {
                currentIndex = (currentIndex + 1) % totalSlides;
                updateSlides();
            });

            $(".prev").click(function() {
                currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
                updateSlides();
            });

            $(".pause").click(function() {
                // Stop auto-sliding
                stopAutoSlide();

                // Hide the "Pause" button and show the "Play" button
                $(this).hide();
                $(".play").show();
            });

            $(".play").click(function() {
                // Start auto-sliding
                startAutoSlide();

                // Hide the "Play" button and show the "Pause" button
                $(this).hide();
                $(".pause").show();
            });

            // Initialize the first slide visibility and auto-slide
            updateSlides();
            startAutoSlide();
        });


