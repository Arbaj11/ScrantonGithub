                quantityInput.value = currentValue + 1;
            });

            // Decrement value
            decrementButton.addEventListener('click', function () {
                let currentValue = parseInt(quantityInput.value, 10) || 0;
                if (currentValue > 1) {
                    quantityInput.value = currentValue - 1;
                }
            });

