@model Scanton.Models.Page
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Add Static Page";
}

<form asp-action="Create" method="post" class="bg-light p-4 rounded shadow-sm">
    <h3 class="text-center text-primary fw-bold mb-4">Static Page</h3>

    <!-- Title Field -->
    <div class="mb-2">
        <label asp-for="CustomePageTittle" class="form-label fw-bold text-dark">Tittle</label>
        <input asp-for="CustomePageTittle" class="form-control rounded-pill border-primary shadow-sm" placeholder="Enter Tittle" />
        <span asp-validation-for="CustomePageTittle" class="text-danger small"></span>
    </div>

    <!-- Page URL Field -->
    <div class="mb-2">
        <label asp-for="PageUrl" class="form-label fw-bold text-dark">Page Url</label>
        <input asp-for="PageUrl" class="form-control rounded-pill border-primary shadow-sm" placeholder="Enter Page Url" />
        <span asp-validation-for="PageUrl" class="text-danger small"></span>
    </div>

    <!-- Page Category Dropdown -->
    <div class="mb-2">
        <label asp-for="PageCategory" class="form-label fw-bold text-dark">Page Category</label>
        <select asp-for="PageCategory" class="form-select rounded-pill border-primary shadow-sm">
            <option value="">Select a Category</option>
            <option value="Quick Links">Quick Links</option>
            <option value="Customer Service">Customer Service</option>
        </select>
        <span asp-validation-for="PageCategory" class="text-danger small"></span>
    </div>

    <!-- Details Field (TinyMCE Editor) -->
    <div class="mb-3">
        <label asp-for="CustomePageData" class="form-label fw-bold text-dark">Details</label>
        <textarea id="editor" name="CustomePageData" class="form-control" rows="5" style="min-height: 150px;">@Model.CustomePageData</textarea>
        <span asp-validation-for="CustomePageData" class="text-danger small"></span>
    </div>

    <!-- Submit Button -->
    <div class="text-center">
        <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm submit-model custom-button">
            Submit
        </button>
    </div>
</form>




<script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
<script src="https://cdn.tiny.cloud/1/uri33eo7eany9kxw5kj74jvznvem0uauna1wrsg8y5ang3s7/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
<script>
    tinymce.init({
        selector: '#editor',
        menubar: false,
        statusbar: false,
        plugins: 'autoresize anchor autolink charmap code codesample directionality fullpage help hr image imagetools insertdatetime link lists media nonbreaking pagebreak preview print searchreplace table template textpattern toc visualblocks visualchars',
        toolbar: 'h1 h2 bold italic strikethrough blockquote bullist numlist backcolor | link image media | removeformat help fullscreen',
        skin: 'bootstrap',
        toolbar_drawer: 'floating',
        min_height: 200,
        autoresize_bottom_margin: 16,
        setup: (editor) => {
            editor.on('init', () => {
                editor.getContainer().style.transition = "border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out";
            });
            editor.on('focus', () => {
                editor.getContainer().style.boxShadow = "0 0 0 .2rem rgba(0, 123, 255, .25)";
                editor.getContainer().style.borderColor = "#80bdff";
            });
            editor.on('blur', () => {
                editor.getContainer().style.boxShadow = "";
                editor.getContainer().style.borderColor = "";
            });
        }
    });
</script>
