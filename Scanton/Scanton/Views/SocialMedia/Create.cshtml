@model Scanton.Models.SocialMedia
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Add Social Media";
}

<form asp-action="Create" method="post" class="bg-light p-4 rounded shadow-sm">
    <h3 class="text-center text-primary fw-bold mb-4">Social Media</h3>


    <div class="mb-4">
        <label asp-for="AccountName" class="form-label fw-bold text-dark">Account Name</label>
        <input asp-for="AccountName" class="form-control rounded-pill border-primary shadow-sm" placeholder="Enter Name" />
        <span asp-validation-for="AccountName" class="text-danger small"></span>
    </div>
    
    <div class="mb-4">
        <label asp-for="AccountURLLink" class="form-label fw-bold text-dark">Account URL Link</label>
        <input asp-for="AccountURLLink" class="form-control rounded-pill border-primary shadow-sm" placeholder="Enter URl" />
        <span asp-validation-for="AccountURLLink" class="text-danger small"></span>
    </div>

    <div class="mb-4">
        <label asp-for="AccountIcon" class="form-label fw-bold text-dark">Account Icon</label>
        <input asp-for="AccountIcon" class="form-control rounded-pill border-primary shadow-sm" placeholder="Enter Icon" />
        <span asp-validation-for="AccountIcon" class="text-danger small"></span>
    </div>


    <!-- Submit Button -->
    <div class="text-center">
        <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm submit-model custom-button">Submit</button>
    </div>
</form>
