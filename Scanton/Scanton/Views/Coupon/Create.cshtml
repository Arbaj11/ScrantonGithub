@model Scanton.Models.Coupon

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Add New Coupon";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="fw-bold">Add Coupon</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Code" class="form-label">Coupon Code</label>
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Discount" class="form-label">Discount (%)</label>
                            <input asp-for="Discount" type="number" class="form-control" />
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ExpiryDate" class="form-label">Expiry Date</label>
                            <input asp-for="ExpiryDate" type="date" class="form-control" />
                            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">Is Active</label>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
