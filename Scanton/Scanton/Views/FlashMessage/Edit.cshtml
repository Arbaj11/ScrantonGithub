@model Scanton.Models.FlashMessage
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit Flash Message";
}
<div class="container mt-5">
    <h2 class="text-center text-primary fw-bold">Edit Flash Message</h2>
    <div class="card shadow">
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input asp-for="Id" type="hidden" />
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Message" class="form-label fw-bold">Message</label>
                    <textarea asp-for="Message" class="form-control" rows="4" placeholder="Enter message"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="ImageFile" class="form-label">Upload Image</label>
                    <input type="file" class="form-control" name="imageFile" />
                </div>
                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Active</label>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
