         // Handle rating hover and click events
    $(".rating-component .star").on("mouseover", function () {
      var onStar = parseInt($(this).data("value"), 10);
      $(this).parent().children("i.star").each(function (e) {
        if (e < onStar) {
          $(this).addClass("hover");
        } else {
          $(this).removeClass("hover");
        }
      });
    }).on("mouseout", function () {
      $(this).parent().children("i.star").each(function (e) {
        $(this).removeClass("hover");
      });
    });

    // Handle rating selection and update hidden input values
    $(".rating-component .stars-box .star").on("click", function () {
      var onStar = parseInt($(this).data("value"), 10);
      var stars = $(this).parent().children("i.star");
      var ratingMessage = $(this).data("message");

      // Set the selected rating value
      $('.rating-component .starrate .ratevalue').val(onStar);

      $(".fa-smile-wink").show();
      $(".button-box .done").show();

      if (onStar === 5) {
        $(".button-box .done").removeAttr("disabled");
      } else {
        $(".button-box .done").attr("disabled", "true");
      }

      // Update selected stars
      stars.removeClass("selected");
      for (var i = 0; i < onStar; i++) {
        $(stars[i]).addClass("selected");
      }

      // Set the rating message
      $(".status-msg .rating_msg").val(ratingMessage);
      $(".status-msg").html(ratingMessage);
      $("[data-tag-set]").hide();
      $("[data-tag-set=" + onStar + "]").show();
    });

    // Handle feedback tag selection
    $(".feedback-tags .feedback-tag").on("click", function () {
      var choosedTagsLength = $(this).parent("div.tags-box").find(".choosed").length;

      if ($(this).hasClass("choosed")) {
        $(this).removeClass("choosed");
        choosedTagsLength--;
      } else {
        $(this).addClass("choosed");
      }

      // Enable or disable submit button based on tag selection
      if (choosedTagsLength > 0) {
        $(".button-box .done").removeAttr("disabled");
      } else {
        $(".button-box .done").attr("disabled", "true");
      }
    });

    // Handle compliment section click
    $(".compliment-container .fa-smile-wink").on("click", function () {
      $(this).fadeOut("slow", function () {
        $(".list-of-compliment").fadeIn();
      });
    });

    // Handle form submission (this part may include sending the data to a server)
    $(".done").on("click", function (e) {
      e.preventDefault();

      // Process form submission and show success message
      $(".rating-component").hide();
      $(".feedback-tags").hide();
      $(".button-box").hide();
      $(".submited-box").show();
      $(".submited-box .loader").show();

      setTimeout(function () {
