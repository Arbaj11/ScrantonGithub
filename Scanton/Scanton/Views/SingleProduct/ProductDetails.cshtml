<section class="product-slider-container">
    <h2 class="section-title">You May Also Like</h2>
    <div>
        <div class="d-flex align-items-center view-all-products">
            <a href="#" class="btn btn-primary me-2 view-btn">View All</a>
            <div class="swiper-buttons">
                <button class="swiper-prev product-carousel-prev btn btn-yellow">❮</button>
                <button class="swiper-next product-carousel-next btn btn-yellow">❯</button>
            </div>
        </div>
    </div>
    <div class="slider-container position-relative swiper-container">
        <div id="productCarousel" class="slider-wrapper swiper-wrapper">
            @if (Model?.Products != null && Model.Products.Any())
            {
                foreach (var product in Model.Products.Take(10))
                {
                    <div class="swiper-slide product-slide flex-shrink-0" style="width: 20%;">
                        <div class="product-item">
                            @if (product.BadgeIsActive == true)
                            {
                                <figure>
                                    <a href="index.html" title="@product.Name">
                                        @if (!string.IsNullOrEmpty(product.TittleBadge) && product.TittleBadge == "Sold Out")
                                        {
                                            <span class="offer-badge">@product.TittleBadge</span>
                                        }
                                        else
                                        {
                                            <span class="offer-badge-green">@product.TittleBadge %</span>
                                        }
                                        <img src="@product.ImagePath" alt="img-not-found" class="tab-image">
                                    </a>
                                </figure>
                            }
                            else
                            {
                                <figure>
                                    <a href="index.html" title="@product.FeaturedProducts">
                                        <img src="@product.ImagePath" alt="img-not-found" class="tab-image">
                                    </a>
                                </figure>
                            }

                            <div class="d-flex flex-column text-center">
                                <h3 class="fs-6 fw-bold">@product.Name</h3>
                                <h2 class="fs-6 fw-normal">@product.Flavor</h2>
                                <div>
                                    <span class="rating">
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star-half-stroke"></i>
                                    </span>
                                    <span>(222)</span>
                                </div>
                                <div class="d-flex justify-content-center align-items-center gap-2">
                                    @if (product.Price > 0)
                                    {
                                        <del class="orignal-price">$@product.Price</del>
                                    }
                                    <span class="text-dark fw-semibold custom-bold">$@product.PriceWithDiscount</span>
                                    <span class="badge border rounded-0 fw-normal px-1 fs-7 lh-1 custom-badge">10% OFF</span>
                                </div>
                                <div class="button-area p-3 pt-0">
                                    <div class="row g-1 mt-2 justify-content-start">
                                        <div class="col-6 d-flex justify-content-between align-items-center">
                                            <a href="#" class="btn btn-primary rounded-1 p-2 fs-7 btn-cart">
                                                <i class="fa-solid fa-cart-shopping"></i> Add to Cart
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Pagination -->
        <div class="swiper-pagination"></div>

    </div>
    <div class="shop-all-btn-container">
        <a href="https://www.hempstarproducts.com" class="shop-all-btn">Shop All Products</a>
    </div>
</section>



<section class="product-tabs-section">
    <div class="container">
        <div class="col-12">
            <!-- Tab Navigation -->
            <ul class="nav nav-tabs custom-nav" id="productTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" aria-controls="description" aria-selected="true">
                        Description
                    </button>
                </li>

                
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="review-tab" data-bs-toggle="tab" data-bs-target="#review" type="button" role="tab" aria-controls="review" aria-selected="false">
                        Review
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content custom-tab" id="productTabContent">
                <!-- Description Tab -->
                <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                    <div class="product-description">
                        <p>
                            @Html.Raw(ViewBag.SingleProduct.ShortDescription)
                        </p>
                    </div>
                </div>

                <!-- Review Tab -->

                <div class="tab-pane fade" id="review" role="tabpanel" aria-labelledby="review-tab">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="review-box colorful-theme">
                                <h4 class="fw-bold text-center">Add a Review</h4>
                                <form id="reviewForm" class="review-form">
                                    <!-- Name and Email Fields -->
                                    <div class="mb-3">
                                        <label for="reviewerName" class="form-label">Your Name</label>
                                        <input type="text" id="reviewerName" class="form-control form-review" placeholder="Name *" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="emailAddress" class="form-label">Email Address</label>
                                        <input type="email" id="emailAddress" class="form-control form-review" placeholder="Email *" required>
                                    </div>

                                    <!-- Rating Section -->
                                    <div class="mb-3">
                                        <div class="review-box colorful-theme">
                                            <h1>Review and Rating</h1>
                                            <h2>How was your experience with our product?</h2>

                                            <div class="rating-component">
                                                <div class="status-msg">
                                                    <label>
                                                        <input class="rating_msg" type="hidden" name="rating_msg" value="" />
                                                    </label>
