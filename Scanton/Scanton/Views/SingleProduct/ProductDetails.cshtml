@model Scanton.Models.IndexViewModel
@{
    Layout = "_Layout2";
}

<section class="breadscrumb-section pt-0">
    <div class="container-fluid-lg">
        <div class="row">
            <div class="col-12">
                <div class="breadscrumb-contain">
                    <nav>
                            <ol class="breadcrumb mb-0">
                                <li class="breadcrumb-item">
                                    <a href="">
                                        <i class="fa-solid fa-house"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="shop.aspx?0">Shop</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewBag.SingleProduct.CategoryName</li>
                            </ol>
                        
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="product-details-section py-5">
    <div class="container-fluid-lg">
        <div class="row">
            <!-- Product Image (Left Side) -->

            <div class="col-lg-4 col-md-4 col-sm-12 mb-4 product-class">
                <div class="product-image-box">
                    <img id="main-image" src="@ViewBag.SingleProduct.ImagePath" alt="Product Image" class="img-fluid">
                </div>

                <div class="sub-image-gallery">
                    @if (!string.IsNullOrEmpty(ViewBag.SingleProduct.ImagePath))
                    {
                        <button class="sub-image-button" onclick="changeMainImage('@ViewBag.SingleProduct.ImagePath')">
                            <img src="@ViewBag.SingleProduct.ImagePath" alt="Main Image" class="img-fluid">
                        </button>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.SingleProduct.SubImage_1))
                    {
                        <button class="sub-image-button" onclick="changeMainImage('@ViewBag.SingleProduct.SubImage_1')">
                            <img src="@ViewBag.SingleProduct.SubImage_1" alt="Sub Image 1" class="img-fluid">
                        </button>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.SingleProduct.SubImage_2))
                    {
                        <button class="sub-image-button" onclick="changeMainImage('@ViewBag.SingleProduct.SubImage_2')">
                            <img src="@ViewBag.SingleProduct.SubImage_2" alt="Sub Image 2" class="img-fluid">
                        </button>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.SingleProduct.SubImage_3))
                    {
                        <button class="sub-image-button" onclick="changeMainImage('@ViewBag.SingleProduct.SubImage_3')">
                            <img src="@ViewBag.SingleProduct.SubImage_3" alt="Sub Image 3" class="img-fluid">
                        </button>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.SingleProduct.SubImage_4))
                    {
                        <button class="sub-image-button" onclick="changeMainImage('@ViewBag.SingleProduct.SubImage_4')">
                            <img src="@ViewBag.SingleProduct.SubImage_4" alt="Sub Image 4" class="img-fluid">
                        </button>
                    }
                </div>
            </div>


            <!-- Product Details (Middle) -->
            <div class="col-lg-4 col-md-4 col-sm-12 mb-4">
                <div class="product-details-box">
                    <h2 class="product-title">@ViewBag.SingleProduct.Name</h2>
                    <p class="product-price">$@ViewBag.SingleProduct.Price</p>
                    <p class="product-description">
                        @Html.Raw(ViewBag.SingleProduct.Description)
                    </p>
                    <div class="product-info">
                        <ul class="product-info-list">
                            <li><i class="fa-solid fa-cannabis product-icons"></i> Type: <a href="javascript:void(0)">THC-A</a></li>
                            <li><i class="fa-solid fa-dollar-sign product-icons"></i> Unit Price: <a href="javascript:void(0)">@ViewBag.SingleProduct.Price</a></li>
                            <li><i class="fa-solid fa-weight-scale product-icons"></i> Weight: <a href="javascript:void(0)">@ViewBag.SingleProduct.Weight</a></li>
                            <li><i class="fa-solid fa-boxes-stacked product-icons"></i> Qty: <a href="javascript:void(0)">@ViewBag.SingleProduct.PricePerPcs pcs/box</a></li>
                        </ul>
                    </div>
                    <div class="pip-section-group__content">
                        <!-- Delivery Section -->
                        <button class="pip-section pip-delivery-section js-delivery-section" aria-live="polite" aria-busy="false">
                            <div class="pip-section__content--wrapper">
                                <svg viewBox="0 0 24 24" focusable="false" width="24" height="24" aria-hidden="true" class="pip-svg-icon pip-section__icon">
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M1 4h15v3h3.0246l3.9793 5.6848V18h-2.6567c-.4218 1.3056-1.6473 2.25-3.0933 2.25-1.446 0-2.6715-.9444-3.0932-2.25h-3.9044c-.4217 1.3056-1.6472 2.25-3.0932 2.25S4.4916 19.3056 4.0698 18H1V4zm3.0698 12c.4218-1.3056 1.6473-2.25 3.0933-2.25 1.446 0 2.6715.9444 3.0932 2.25H14V6H3v10h1.0698zM16 14.0007a3.24 3.24 0 0 1 1.2539-.2507c1.446 0 2.6715.9444 3.0933 2.25h.6567v-2.6848L17.9833 9H16v5.0007zM7.163 15.75c-.6903 0-1.25.5596-1.25 1.25s.5597 1.25 1.25 1.25c.6904 0 1.25-.5596 1.25-1.25s-.5596-1.25-1.25-1.25zm10.0909 0c-.6904 0-1.25.5596-1.25 1.25s.5596 1.25 1.25 1.25 1.25-.5596 1.25-1.25-.5596-1.25-1.25-1.25z"></path>
                                </svg>
                                <div class="pip-section__content">
                                    <strong class="pip-section__header">Delivery</strong> Check availability
                                </div>
                            </div>
                            <svg viewBox="0 0 24 24" focusable="false" width="24" height="24" aria-hidden="true" class="pip-svg-icon pip-section__icon pip-section__icon--right">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="m15.5996 12.0007-5.785 5.7857-1.4143-1.4141 4.3711-4.3716L8.4003 7.629l1.4143-1.4142 5.785 5.7859z"></path>
                            </svg>
                        </button>

                        <!-- In Store Section -->
                        <button class="pip-section pip-store-section js-store-section pip-store__section" aria-live="polite" aria-busy="false">
                            <div class="pip-section__content--wrapper">
                                <svg viewBox="0 0 24 24" focusable="false" width="24" height="24" aria-hidden="true" class="pip-svg-icon pip-section__icon">
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M2 4v16h20V4H2zm2 4V6h16v2H4zm0 2v8h3v-6h10v6h3v-8H4zm11 4h-2v4h2v-4zm-4 0H9v4h2v-4z"></path>
