@model IEnumerable<Scanton.Models.ParentCategory>
@{
    Layout = "_AdminLayout";
}

<div class="container">
    <h1>  </h1>
    <div class="row">
        <!-- Add Parent Category -->
        <div class="col-md-6">
            <h4>Add Parent Category</h4>
            <form method="post" asp-action="Create" enctype="multipart/form-data">  
                <div class="mb-3">
                    <label>Name</label>
                    <input type="text" name="name" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label>Description</label>
                    <textarea name="description" class="form-control"></textarea>
                </div>
                <div class="mb-3">
                    <label for="ImageFile" class="form-label">
                        <i class="bi bi-image me-2"></i> Image
                    </label>
                    <input type="file" class="form-control" id="ImageFile3" name="imageFile" />
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>

        <!-- List Parent Categories -->
        <div class="col-md-6">
            <h4>Parent Categories</h4>
            <table class="table table-bordered table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@(category.Name ?? "No Name")</td>
                            <td>
                                <img src="@category.ImagePath" style="width: 100px; height: 100px;" />
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm me-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form method="post" asp-action="Delete" asp-route-id="@category.Id" style="display:inline;">
                                    <button class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
