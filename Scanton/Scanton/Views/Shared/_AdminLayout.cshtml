        /* Sidebar Styling */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 260px;
            height: 100vh;
            background-color: Black;
            color: #fff;
            padding-top: 20px;
            overflow-y: auto; /* Add vertical scrolling */
